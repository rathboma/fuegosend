<div class="container-fluid py-4" style="max-width: 1400px;">
  <div class="mb-4">
    <h1 class="fs-2 mb-2">Team Members</h1>
    <p class="text-muted">Manage team access and permissions</p>
  </div>

  <!-- Invite new member form -->
  <div class="card border mb-4">
    <div class="card-body">
      <h5 class="card-title mb-3">Invite Team Member</h5>
      <%= form_with url: invitations_path, method: :post, local: true, class: "row g-3" do |f| %>
        <div class="col-md-6">
          <%= f.label :email, "Email Address", class: "form-label" %>
          <%= f.email_field :email, class: "form-control", placeholder: "teammate@example.com", required: true, name: "invitation[email]" %>
        </div>
        <div class="col-md-4">
          <%= f.label :role, "Role", class: "form-label" %>
          <%= f.select :role,
              [
                ['Member (View & Edit)', 'member'],
                ['Admin (Full Access)', 'admin'],
                ['Owner (Billing & Team)', 'owner']
              ],
              {},
              class: "form-select",
              name: "invitation[role]"
          %>
        </div>
        <div class="col-md-2 d-flex align-items-end">
          <%= f.submit "Send Invite", class: "btn btn-primary w-100" %>
        </div>
      <% end %>

      <div class="mt-3">
        <p class="small text-muted mb-0">
          <strong>Roles:</strong><br>
          <strong>Member:</strong> Can view and edit campaigns, lists, subscribers, and templates<br>
          <strong>Admin:</strong> Full access including team management and account settings<br>
          <strong>Owner:</strong> Complete control including billing and account deletion
        </p>
      </div>
    </div>
  </div>

  <!-- Current Team Members -->
  <div class="mb-4">
    <h2 class="fs-4 mb-3">Current Team (<%= @team_members.count %>)</h2>
    <div class="card border">
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Role</th>
              <th>Joined</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @team_members.each do |member| %>
              <tr>
                <td>
                  <div class="fw-semibold"><%= member.first_name || member.last_name ? "#{member.first_name} #{member.last_name}".strip : "â€”" %></div>
                </td>
                <td><%= member.email %></td>
                <td>
                  <% if member == current_user %>
                    <span class="badge bg-primary"><%= member.role.titleize %></span>
                  <% elsif current_user.owner? %>
                    <%= form_with model: member, url: team_member_path(member), method: :patch, local: true, class: "d-inline" do |f| %>
                      <%= f.select :role,
                          [['Member', 'member'], ['Admin', 'admin'], ['Owner', 'owner']],
                          { selected: member.role },
                          { class: "form-select form-select-sm d-inline-block w-auto", onchange: "this.form.submit()" }
                      %>
                    <% end %>
                  <% else %>
                    <span class="badge bg-secondary"><%= member.role.titleize %></span>
                  <% end %>
                </td>
                <td><%= member.created_at.strftime("%b %d, %Y") %></td>
                <td>
                  <% if member != current_user && !member.owner? %>
                    <%= button_to "Remove", team_member_path(member), method: :delete,
                        class: "btn btn-sm btn-outline-danger",
                        data: { turbo_confirm: "Remove #{member.email} from the team?" }
                    %>
                  <% elsif member == current_user %>
                    <span class="text-muted small">(You)</span>
                  <% elsif member.owner? %>
                    <span class="text-muted small">(Owner)</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Pending Invitations -->
  <% if @pending_invitations.any? %>
    <div class="mb-4">
      <h2 class="fs-4 mb-3">Pending Invitations (<%= @pending_invitations.count %>)</h2>
      <div class="card border">
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead class="table-light">
              <tr>
                <th>Email</th>
                <th>Role</th>
                <th>Invited By</th>
                <th>Expires</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @pending_invitations.each do |invitation| %>
                <tr>
                  <td><%= invitation.email %></td>
                  <td><span class="badge bg-secondary"><%= invitation.role.titleize %></span></td>
                  <td><%= invitation.invited_by.email %></td>
                  <td>
                    <span class="<%= 'text-warning' if invitation.expires_at < 2.days.from_now %>">
                      <%= time_ago_in_words(invitation.expires_at) %> from now
                    </span>
                  </td>
                  <td>
                    <%= button_to "Cancel", invitation_path(invitation), method: :delete,
                        class: "btn btn-sm btn-outline-danger",
                        data: { turbo_confirm: "Cancel invitation to #{invitation.email}?" }
                    %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>
