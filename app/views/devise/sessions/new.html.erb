<div class="auth-gradient-bg">
  <div class="card shadow-lg" style="width: 100%; max-width: 400px;">
    <div class="card-body p-4">
      <div class="text-center mb-4">
        <h1 class="brand fs-2 mb-2">Fuegomail</h1>
        <h2 class="h5 fw-normal">Sign in to your account</h2>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-3">
          <%= f.label :email, "Email address", class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "you@example.com" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter your password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check mb-3">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, "Remember me", class: "form-check-label" %>
          </div>
        <% end %>

        <div class="d-grid mb-3">
          <%= f.submit "Sign in", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="text-center pt-3 border-top">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
