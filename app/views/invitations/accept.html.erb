<div class="auth-gradient-bg">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="card border shadow">
          <div class="card-body p-4">
            <h1 class="fs-3 mb-3 text-center">Join <%= @invitation.account.name %></h1>
            <p class="text-center text-muted mb-4">
              You've been invited by <strong><%= @invitation.invited_by.first_name || @invitation.invited_by.email %></strong><br>
              as a <span class="badge bg-secondary"><%= @invitation.role.titleize %></span>
            </p>

            <%= form_with model: @user, url: process_invitation_path(@invitation.token), method: :post, local: true do |f| %>
              <% if @user.errors.any? %>
                <div class="alert alert-danger small mb-3">
                  <strong><%= pluralize(@user.errors.count, "error") %> prevented your account from being created:</strong>
                  <ul class="mb-0 mt-2">
                    <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="mb-3">
                <%= f.label :email, "Email", class: "form-label" %>
                <%= f.email_field :email, value: @invitation.email, class: "form-control", disabled: true %>
                <small class="text-muted">This email address is associated with your invitation</small>
              </div>

              <div class="mb-3">
                <%= f.label :first_name, "First Name", class: "form-label" %>
                <%= f.text_field :first_name, class: "form-control", required: true, autofocus: true %>
              </div>

              <div class="mb-3">
                <%= f.label :last_name, "Last Name", class: "form-label" %>
                <%= f.text_field :last_name, class: "form-control", required: true %>
              </div>

              <div class="mb-3">
                <%= f.label :password, "Password", class: "form-label" %>
                <%= f.password_field :password, class: "form-control", required: true, minlength: 6 %>
                <small class="text-muted">Minimum 6 characters</small>
              </div>

              <div class="mb-4">
                <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
                <%= f.password_field :password_confirmation, class: "form-control", required: true, minlength: 6 %>
              </div>

              <%= f.submit "Accept Invitation & Create Account", class: "btn btn-primary w-100" %>
            <% end %>

            <div class="text-center mt-3">
              <small class="text-muted">
                By creating an account, you agree to our Terms of Service and Privacy Policy
              </small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
