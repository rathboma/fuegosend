      .hero h1 { font-size: 3rem; }
      .feature-row, .feature-row.reverse { grid-template-columns: 1fr; gap: 40px; }
      .comparison-card { flex-direction: column; }
      .p-card.featured { transform: scale(1); margin: 20px 0; }
    }
  </style>
</head>
