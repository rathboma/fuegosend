<div class="container-fluid py-4" style="max-width: 1400px;">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fs-2 mb-0">Account Settings</h1>
    <%= link_to "Edit Settings", edit_account_path, class: "btn btn-primary" %>
  </div>

  <!-- Account Information -->
  <div class="mb-4">
    <h2 class="fs-4 mb-3">Account Information</h2>
    <div class="card border">
      <div class="card-body">
        <div class="row g-4">
          <div class="col-md-6">
            <div class="text-muted small mb-1">Account Name</div>
            <div class="fw-semibold"><%= @account.name %></div>
          </div>
          <div class="col-md-6">
            <div class="text-muted small mb-1">Subdomain</div>
            <div class="fw-semibold"><%= @account.subdomain %></div>
          </div>
          <div class="col-md-6">
            <div class="text-muted small mb-1">AWS Region</div>
            <div class="fw-semibold"><%= @account.aws_region %></div>
          </div>
          <div class="col-md-6">
            <div class="text-muted small mb-1">Status</div>
            <div>
              <span class="badge status-<%= @account.active? ? 'active' : 'inactive' %>">
                <%= @account.active? ? 'Active' : 'Inactive' %>
              </span>
            </div>
          </div>
          <div class="col-12">
            <div class="text-muted small mb-1">Brand Logo</div>
            <% if @account.brand_logo.present? %>
              <div class="mt-2">
                <img src="<%= @account.brand_logo %>" alt="Brand Logo" style="max-width: 200px; max-height: 80px;" class="border p-2 bg-light">
              </div>
            <% else %>
              <div class="text-muted fst-italic">No brand logo set</div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- SES Configuration -->
  <div class="mb-4">
    <h2 class="fs-4 mb-3">AWS SES Configuration</h2>
    <div class="card border">
      <div class="card-body">
        <div class="row g-4">
          <div class="col-md-6">
            <div class="text-muted small mb-1">Access Key ID</div>
            <div class="fw-semibold"><%= @account.aws_access_key_id.present? ? '****' : 'Not configured' %></div>
          </div>
          <div class="col-md-6">
            <div class="text-muted small mb-1">Secret Access Key</div>
            <div class="fw-semibold"><%= @account.aws_secret_access_key.present? ? '****' : 'Not configured' %></div>
          </div>
          <div class="col-md-6">
            <div class="text-muted small mb-1">Configuration Set Name</div>
            <div class="fw-semibold"><%= @account.ses_configuration_set_name.present? ? @account.ses_configuration_set_name : 'Not configured' %></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- SES Sending Quota -->
  <div class="mb-4">
    <h2 class="fs-4 mb-3">SES Sending Quota</h2>
    <div class="card border">
      <div class="card-body">
        <div class="quota-bar mb-2">
          <div class="quota-fill" style="width: <%= @ses_quota[:percent_used] %>%"></div>
        </div>
        <div class="text-muted small mb-4">
          <%= number_with_delimiter(@ses_quota[:sent_today]) %> / <%= number_with_delimiter(@ses_quota[:max_daily]) %> emails sent today
          (<%= @ses_quota[:percent_used] %>%)
        </div>

        <div class="row g-4 mb-3">
          <div class="col-md-6 col-lg-3">
            <div class="text-muted small mb-1">Daily Sending Limit</div>
            <div class="fw-semibold"><%= number_with_delimiter(@ses_quota[:max_daily]) %> emails</div>
          </div>
          <div class="col-md-6 col-lg-3">
            <div class="text-muted small mb-1">Maximum Send Rate</div>
            <div class="fw-semibold"><%= @ses_quota[:max_rate] %> emails/second</div>
          </div>
          <div class="col-md-6 col-lg-3">
            <div class="text-muted small mb-1">Sent Today</div>
            <div class="fw-semibold"><%= number_with_delimiter(@ses_quota[:sent_today]) %> emails</div>
          </div>
          <div class="col-md-6 col-lg-3">
            <div class="text-muted small mb-1">Remaining Today</div>
            <div class="fw-semibold"><%= number_with_delimiter(@ses_quota[:max_daily] - @ses_quota[:sent_today]) %> emails</div>
          </div>
        </div>

        <% if @ses_quota[:quota_reset_at].present? %>
          <p class="text-muted small mb-0">
            Quota resets at <%= @ses_quota[:quota_reset_at].strftime("%B %d, %Y at %I:%M %p") %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>
